{
  "extends": ["standard", "standard-jsx"],
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "space-before-function-paren": ["error", {
        "anonymous": "always",
        "asyncArrow": "always",
        "named": "never"
    }],
    "jsx-quotes": ["error", "prefer-double"]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true
  }
}
