@import './common/variables.styl'

.search-input
  margin-right: 20px
  padding: 9px 10px
  width: 230px
  transition: all .5s ease
  outline: none
  border: none
  border-left: 5px solid text-green
  background-color: search-bg
  font-size: 14px
  font-family: font-roboto
  font-weight: 300
  letter-spacing: .2px
  &:not(:placeholder-shown),
  &:focus
    width: 300px
